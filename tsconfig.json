{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/core/*": ["src/core/*"],
      "@/bundler/*": ["src/bundler/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/constants/*": ["src/constants/*"],
      "@/errors/*": ["src/errors/*"],
      "@/config/*": ["src/config/*"],
      "@/templates/*": ["src/templates/*"]
    },
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "removeComments": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/templates/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}