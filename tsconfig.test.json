{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override or add any specific options for testing here
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["jest", "node"],
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
